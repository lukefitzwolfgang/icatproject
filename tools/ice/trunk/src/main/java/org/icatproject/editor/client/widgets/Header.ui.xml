<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .userName {
        	padding: 6px 10px 10px 40px
        }
    </ui:style>
    <g:VerticalPanel>
        <g:HTML>
            <h1>ICE - Icat Data Editor</h1>
        </g:HTML>
        <g:HorizontalPanel>

            <g:ListBox ui:field="action">
                <g:item>
                    Create
                </g:item>
                <g:item>
                    Update
                </g:item>
                <g:item>
                    Delete
                </g:item>
            </g:ListBox>
            <g:ListBox ui:field="beanNames"></g:ListBox>

            <g:Label ui:field="userName" styleName="{style.userName}"></g:Label>
            <g:Button ui:field="logoutButton">Logout</g:Button>
        </g:HorizontalPanel>
    </g:VerticalPanel>
</ui:UiBinder>
